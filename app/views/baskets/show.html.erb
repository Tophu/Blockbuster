<h2>Basket</h2>
<ul>
  <% @basket.items.each do |item| %>
    <li>Item: <%= item.product.title %>/ Price: <%= number_to_currency(item.movie.price) %>/ Quantity: <%= item.quantity %>/ Total Price: <%= number_to_currency(item.total_price) %>
    <ul>
      <li>
        <%= link_to "Add one", item_add_path(:id => item), method: :post %>
        <%= link_to "Reduce one", item_reduce_path(:id => item), method: :post %>
      </li>
      <li>
        <%= link_to "Remove item", item_path(item), method: :delete %>
      </li>
    </ul>
    
  <% end %>
</ul>
<h3>Sub total: <%= number_to_currency(@basket.sub_total) %></h3>
<%= link_to "Proceed to checkout", new_order_path %><br>
<%= link_to "Empty basket", basket_path(@current_basket),method: :delete, data: {confirm: "Are you sure?"}

